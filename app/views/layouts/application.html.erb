<!DOCTYPE html>
<html>
  <head>
    <title>Districtreview</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

<nav class="navbar navbar-toggleable-md navbar-inverse bg-inverse">
  <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <%= link_to 'District Review', root_path, class: 'navbar-brand' %>

  <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
    <ul class="navbar-nav mr-auto mt-2 mt-md-0">
      <li class="nav-item">
        <%= link_to shares_path, class: 'nav-link' do %>
          <i class="fa fa-plus-circle"></i>
          Shares
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to new_share_path, class: 'nav-link' do %>
          <i class="fa fa-plus-circle"></i>
          New Share
        <% end %>
      </li> 
    </ul>
  </div>
</nav>

    <% if current_user %>
      You're signed in as <%= current_user.email %>.
      <%= link_to "Sign out", destroy_user_session_path, method: :delete, class: 'sign-out' %>
    <% else %>
      <%= link_to "Sign In", new_user_session_path, class: 'sign-in' %>
      <%= link_to "Sign Up", new_user_registration_path, class: 'sign-up' %>
    <% end %>
    <% if notice.present? %>
      <p class="notice"><%= notice %></p>
    <% end %>

    <% if alert.present? %>
      <p class="alert"><%= alert %></p>
    <% end %>

    <%= yield %>

  </body>
</html>

