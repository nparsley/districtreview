<div class="booyah-box col-10 offset-1">
  <h1><%= @share.name %></h1>
  <i><%= @share.address %></i>
  <br/><br/>
  <p><%= @share.description %></p>
  <div class="float-right">
    <%= link_to 'Edit', edit_share_path(@share), class: 'btn btn-primary' %>
    <%= link_to 'Destroy', share_path(@share), method: :delete, data: {confirm: 'Delete this?'},class: 'btn btn-danger' %>
  </div>
</div>

